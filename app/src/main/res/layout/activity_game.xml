<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.GameActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_above="@+id/systemnum"
        android:textAlignment="center"
        android:text=""
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systemnum"
        android:layout_above="@+id/playernum"
        android:textAlignment="center"
        android:text=""
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playernum"
        android:layout_above="@+id/ediText"
        android:textAlignment="center"
        android:text=""
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/ediText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:maxLength="1"
        android:textSize="@dimen/dm_20sp"
        android:textAlignment="center"
        android:layout_above="@+id/betNotify"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"
        android:layout_marginTop="30dp"
        android:hint="****"
        android:textColorHint="@color/black"
        android:focusable="true"
        android:inputType="number"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/betNotify"
        android:layout_above="@+id/keyboard"
        android:textAlignment="center"
        android:text="@string/bet_after_notification"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm_20sp"
        android:textColor="@color/red"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:id="@+id/keyboard"
    android:layout_centerInParent="true"

    android:backgroundTint="@color/blue"
    android:text="@string/home_page"/>
